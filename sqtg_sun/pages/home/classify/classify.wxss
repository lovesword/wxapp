page,.hei100,.foot-padding {
    height: 100%;
    box-sizing: border-box;
}

page {
    background: #fff;
}

.buyFastLef {
    flex: 1;
}

.buyFastRig {
    flex: 4;
}

.bfScrolllef {
    width: 100%;
    height: 100%;
    background: #f3f3f3;
    padding-bottom: 99rpx;
}

.bfScrollrig {
    width: 100%;
    height: 100%;
}

.lvOne {
    display: flex;
    align-items: center;
    height: 100rpx;
    justify-content: center;
}

.lvOne view,.lvOne navigator {
    width: 100%;
    text-align: center;
    line-height: 100rpx;
}

.bfScrolllef .active {
    background: #fafafa;
    color: #f87d6d;
}

.bfgoodsTit {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    font-weight: 600;
}

.bfgoodsItem {
    padding: 0 10rpx;
    box-sizing: border-box;
}

.bfgoodsList {
    display: inline-block;
    margin: 0 0 30rpx 20rpx;
    text-align: center;
}

.bfgoodsList image {
    display: block;
    margin: 0 auto;
    width: 168rpx;
    height: 168rpx;
}

.bfgoodsList view {
    margin-top: 10rpx;
    width: 168rpx;
    white-space: nowrap;
    overflow: hidden;
}

.level1 {
    padding-top: 1rpx;
    height: 100%;
    background: #f3f3f3;
}

.search {
    margin: 20rpx 30rpx;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
}

.search label {
    width: 30rpx;
    height: 48rpx;
    position: absolute;
    top: 0;
    left: 0;
    padding: 18rpx 0 0 30rpx;
    z-index: 2;
}

.search input {
    height: 66rpx;
    flex: 1;
    background: #fff;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 0 0 0 70rpx;
}

.search image {
    width: 30rpx;
    height: 30rpx;
}

.loList image {
    width: 160rpx;
    height: 160rpx;
}

.loItem {
    background: #fff;
    padding: 20rpx 0 50rpx 27rpx;
    box-sizing: border-box;
    background: #fff;
}

.loList {
    margin: 20rpx 20rpx 40rpx 0;
    display: inline-block;
}

.loList view {
    margin-top: 6rpx;
    width: 160rpx;
    height: 30rpx;
    line-height: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-align: center;
}