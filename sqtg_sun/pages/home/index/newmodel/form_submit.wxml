<form bindsubmit="formBook">
    <view class="formBook_li02">
        <textarea adjustPosition="true" name="content" placeholder="感谢提出建议" value="{{bookData.content}}"></textarea>
    </view>
    <view class="formBook_li">
        <view class="li_tit">
            <text>姓名</text>
        </view>
        <input name="name" placeholder="请输入姓名" type="text" value="{{bookData.name}}"></input>
        <view class="clear"></view>
    </view>
    <view class="formBook_li">
        <view class="li_tit">
            <text>手机</text>
        </view>
        <input maxlength="11" name="tel" placeholder="请输入手机号" type="number" value="{{bookData.phone}}"></input>
        <view class="clear"></view>
    </view>
    <view class="formBook_btn">
        <button formType="submit" style="background:#DB384C;color:#fff;width:80%;margin:1rem auto;border-radius:10rpx;">提交</button>
    </view>
</form>
