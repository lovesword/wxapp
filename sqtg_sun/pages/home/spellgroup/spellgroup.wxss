.swiper {
    height: 430rpx;
}

.headerNav {
    height: 92rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.hnLef image {
    width: 40rpx;
    height: 40rpx;
    padding: 0 20rpx;
}

.hnLine {
    height: 48rpx;
    border-right: 1rpx solid #e2e2e2;
}

.sgScrollx {
    flex: 1;
    height: 60rpx;
    overflow: hidden;
    white-space: nowrap;
}

.hnList {
    display: inline-block;
    height: 60rpx;
    margin-right: 10rpx;
    line-height: 60rpx;
    color: #333;
    padding: 0 25rpx;
    font-size: 30rpx;
}

.hnActive {
    background: #f87d6d;
    color: #fff;
    border-radius: 60rpx;
}

.hnList:first-child {
    margin-left: 20rpx;
}

.currentPrice text:first-child {
    font-size: 24rpx;
}

.currentPrice text:nth-child(2) {
    font-size: 30rpx;
}

.sgList {
    display: flex;
    position: relative;
    margin: 20rpx 20rpx 0 20rpx;
    padding-bottom: 20rpx;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.sglImg {
    width: 240rpx;
    height: 240rpx;
    border-radius: 8rpx;
}

.sglRig {
    margin-left: 20rpx;
    flex: 1;
}

.sglRig>view:nth-child(1) {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.sglRig>view:nth-child(2) {
    margin-top: 40rpx;
    font-size: 24rpx;
    color: #f87d6d;
}