.bdList {
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
}

.bdLtop,.bdLbot {
    display: flex;
    align-items: center;
}

.bdLtop view:nth-child(1),.bdLbot view:nth-child(1) {
    flex: 1;
}

.bdLtop view:nth-child(1) {
    font-size: 30rpx;
}

.bdLtop view:nth-child(2) {
    font-size: 24rpx;
    color: #999;
}

.bdLbot view:nth-child(1) {
    font-size: 24rpx;
}

.bdLbot view:nth-child(2) {
    font-size: 28rpx;
    color: #000;
}