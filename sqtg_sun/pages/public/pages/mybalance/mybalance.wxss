.arrowRig {
    width: 12rpx;
    height: 20rpx;
}

.balanceMoney {
    padding: 0 30rpx;
    height: 300rpx;
    background: #f87d6d;
    color: #fff;
}

.balanceMoney view:nth-child(1) {
    padding-top: 60rpx;
}

.balanceMoney view:nth-child(2) {
    margin-top: 50rpx;
    font-size: 90rpx;
}

.balanceList {
    padding: 0 30rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
    font-size: 30rpx;
    color: #000;
}

.balanceList view:nth-child(1) {
    flex: 1;
}