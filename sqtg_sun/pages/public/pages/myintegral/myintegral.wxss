page {
    background: #fff;
}

.flexAndMid {
    display: flex;
    align-items: center;
}

.jfcHead {
    padding: 0 30rpx 0 50rpx;
    background: #f87d6d;
    color: #fff;
}

.jfchRule {
    height: 90rpx;
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.jfcNum {
    font-size: 50rpx;
    padding: 10rpx 0 40rpx 0;
}

.jfcTab {
    height: 90rpx;
    border-bottom: 1rpx solid #eee;
}

.jfcTab>view:nth-child(1),.jfcTab>view:nth-child(2) {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
}

.jfcTab>view:nth-child(1) {
    border-right: 1rpx solid #000;
}

.active {
    color: #f87d6d;
}

.cYel {
    color: #ffbc08;
}

.jfcItem {
    padding: 18rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}

.flexSb {
    margin-top: 8rpx;
}

.jfcWarm {
    width: 80%;
    position: fixed;
    left: 50%;
    margin-left: -40%;
    transform: translateY(-50%);
    background: #fff;
    border-radius: 10rpx;
    z-index: 12;
}

.jfcwHead,.jfcwBot {
    font-size: 30rpx;
    color: #f87d6d;
    line-height: 90rpx;
    text-align: center;
}

.jfcwHead {
    border-bottom: 1rpx solid #eee;
}

.jfcwBot {
    border-top: 1rpx solid #eee;
}

.jfcwCont {
    padding: 20rpx;
    color: #999;
}