page{background: #f2f2f2}
.swiper-tab {display: flex;height: 89rpx;line-height: 89rpx;text-align: center;border-bottom: 1px solid #eee;justify-content: space-around;background: #fff; font-size: 28rpx;}
.on,.swiper-tab .active {height: 88rpx;line-height: 88rpx;border-bottom: 2rpx solid #e9472c;color: #e9472c; font-size: 32rpx}
.olist{ margin:36rpx 15rpx 0 15rpx; padding:28rpx 30rpx 0 30rpx; box-sizing: border-box; background: #fff; border-radius: 12rpx;}
.olTop{ display: flex; font-size: 24rpx;}
.olTop view:nth-child(1){ flex: 1;}
.olTop view:nth-child(2),.olTop text{ color: #e9472c}
.olCont{ margin-top:26rpx; padding-bottom: 20rpx; display: flex; border-bottom: 1rpx solid #eee}
.olcLef{ width: 180rpx; height: 180rpx; margin-right: 30rpx}
.olcRig,.olcSpecification view:nth-child(1){ flex: 1}
.olcName,.olcSpecification{ display: flex;}
.olcName view:nth-child(1){ flex: 1; font-size: 30rpx;}
.olcName view:nth-child(2){ font-size: 24rpx;}
.olcSpecification{ margin-top:10rpx; display: flex; font-size: 24rpx; color: #999}
.olcPrice{ margin-top:20rpx; display: flex;}
.olcPrice view:nth-child(1){flex: 1; font-size: 24rpx; color: #e9472c}
.olcPricetxt text:nth-child(1){ margin-top:10rpx; font-size: 24rpx;}
.olcPricetxt text:nth-child(2){ font-size: 36rpx; color: #e9472c}
.olBot{ height: 82rpx; display: flex; align-items: center; justify-content: flex-end}
.olBot wx-navigator:nth-child(1),.olBot view:nth-child(2){ height: 52rpx; line-height: 52rpx; padding:0 20rpx; border-radius: 26rpx; border:1rpx solid #111;}
.olBot view:nth-child(2){ margin-left:20rpx; border:1rpx solid #e9472c; color: #e9472c}
.olist{ margin-top:26rpx;}
.mask{ position: fixed; top:0; right: 0; bottom:0; left: 0; background: rgba(0,0,0,0.3); z-index: 11}
.changeAttrNum{position: fixed; left: 10%; top:50%; width: 80%; padding:30rpx 0; background: #fff; border-radius: 12rpx; z-index: 16; transform: translateY(-50%)}
.caTit{ font-size: 36rpx; text-align: center;}
.caBtn{ width: 300rpx; height: 66rpx; margin:0 auto; font-size: 30rpx; margin-top:30rpx; line-height: 66rpx; background: #e9472c; border-radius: 44rpx; color: #fff; text-align: center;}
.caList{ margin-top:30rpx; padding-right: 20rpx; box-sizing: border-box}
.caList,.changeNum{ display: flex; align-items: center;}
.clLef{ padding-left:30rpx; flex: 1; box-sizing: border-box; font-size: 26rpx; color: #999; }
.changeNum{ width: 200rpx; justify-content: space-around}
.changeNum input{ width: 66rpx; height: 46rpx; border:1rpx solid #eee; text-align: center; border-radius: 23rpx;}
.reduce,.addNum{ width: 46rpx; height: 46rpx; border-radius: 50%; background: #e9472c; color: #fff; font-size: 30rpx; text-align: center;}
wx-checkbox .wx-checkbox-input { border-radius: 50%; width: 40rpx; height: 40rpx; }
wx-checkbox .wx-checkbox-input.wx-checkbox-input-checked { border: none; background: #e9472c; }
wx-checkbox .wx-checkbox-input.wx-checkbox-input-checked::before { border-radius: 50%; width: 40rpx; height: 40rpx; line-height: 40rpx; text-align: center; font-size: 30rpx; color: #fff; background: transparent; transform: translate(-50%, -50%) scale(1); -webkit-transform: translate(-50%, -50%) scale(1); }
.checkImg{ margin-left:30rpx;}
.close{ position: absolute; top:20rpx; right: 20rpx; width: 40rpx; height: 40rpx;}
