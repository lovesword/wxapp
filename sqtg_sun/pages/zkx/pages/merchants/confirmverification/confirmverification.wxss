.container{ padding-bottom: 100rpx; }
.colorLine { margin-top: 30rpx; }
.info{ margin-bottom: 30rpx; }
.footer{ display: flex; position: fixed; bottom: 0rpx; left: 0rpx; width: 100%; border-top: 1rpx solid #ddd; }
.footer{ display: flex; position: fixed; bottom: 0rpx; left: 0rpx; height: 70rpx; width: 100%; padding:15rpx 0; background:rgba(248, 125, 109, 1); }
.footer>button{ flex: 1; height: 70rpx; line-height: 70rpx; font-size: 32rpx; background:rgba(248, 125, 109, 1); border-radius: 0rpx; }
.footer>button:nth-child(2){ border-left: 1rpx solid #f6c3c3; }
.pay-footer{ border-top: 1rpx solid #ececec; padding:15rpx 20rpx; }
.pay-footer>button{ width: 710rpx; height: 90rpx; line-height: 90rpx; background:rgba(248, 125, 109, 1); font-size: 34rpx; color: #fff; border-radius: 16rpx; }
.choicePay{ animation: showModel 0.3s ease-in-out; }
@keyframes showModel{ 0%{ transform: translateY(1000rpx) }
100%{ transform: translateY(0rpx) }
}.infoList>view.red{ color: #f87d6d; font-weight: 700; }
.qrcode{ padding:0 30rpx 20rpx 30rpx; }
.qrcode> canvas{ width: 420rpx; height: 420rpx; }
.qrcode>view{ display: flex; align-items: center; justify-content: center; width: 360rpx; margin: 40rpx  auto; box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0,0,0,0.4) }
.qrcode canvas{ display: inline-block; margin:0 auto; height: 360rpx; width: 360rpx; }
.verificationed image{ position: absolute; right: 50rpx; top:450rpx; width: 150rpx; height: 120rpx;}
