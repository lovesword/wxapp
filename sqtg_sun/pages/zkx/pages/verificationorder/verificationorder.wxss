page{ padding-bottom: 100rpx; background: #f0f0f0 }
.scHeader{ padding:30rpx 0 0 15rpx; height: 170rpx; background: #e9472c; font-size: 30rpx; color: #fff;}
.platform { display: flex; align-items: center; height: 88rpx; border-bottom: 1rpx solid #eee; }
.platformLef wx-checkbox, .checkImg wx-checkbox { width: 40rpx; height: 40rpx; margin-left: 30rpx; }
.platform > view:nth-child(2) { margin-left: 20rpx; }
.choiceList { margin:30rpx 15rpx 0 15rpx; padding: 30rpx 0; background: #fff; border-radius: 12rpx; }
.clTop{display: flex;align-items: center; border-bottom: 1rpx solid #eee}
.choiceItem{position: relative; margin-top:-120rpx;}
.clImg { width: 160rpx; height: 160rpx; }
.choiceNum { padding-right: 30rpx; }
.choiceNum image { width: 60rpx; height: 60rpx; }
.reduce { height: 56rpx; width: 56rpx; line-height: 50rpx; text-align: center; background: #e9472c; border-radius: 50%; font-size: 46rpx; color: #fff; }
.goodsNum view { width: 64rpx; height: 56rpx; text-align: center; line-height: 56rpx; font-size: 28rpx; color: #e9472c }
.checkImg wx-checkbox { margin-right: 20rpx; }
.clImg { display: block; margin-right: 20rpx; }
.cnInput { margin: 0 5rpx; height: 60rpx; padding: 0 30rpx; background: #f7f7f7; line-height: 60rpx; }
.clearOperation { position: fixed; width: 100%; left: 0; bottom: 0; height: 100rpx; display: flex; align-items: center; box-shadow: 0 -1rpx 5rpx rgba(0, 0, 0, 0.1); background: #fff; z-index: 1; }
.clearOperation wx-checkbox { width: 40rpx; height: 40rpx; margin-left: 30rpx; margin-right: 10rpx; vertical-align: 4rpx; }
.slectAll { display: inline-block; padding-left: 10rpx; }
.payMoney { flex: 1; margin-left: 20rpx; color: #e9472c; }
.blueChoice, .redChoice,.grayChoice{ margin-right: 20rpx; width: 160rpx; height: 70rpx; line-height: 70rpx; font-size: 30rpx; text-align: center; color: #fff; border-radius: 35rpx; }
.grayChoice{background: #999}
.blueChoice { background: #8db4ff; }
.redChoice { background: #e9472c; }
.ellipsis { width: 450rpx; font-size: 30rpx }
wx-checkbox .wx-checkbox-input { border-radius: 50%; width: 40rpx; height: 40rpx; }
wx-checkbox .wx-checkbox-input.wx-checkbox-input-checked { border: none; background: #e9472c; }
wx-checkbox .wx-checkbox-input.wx-checkbox-input-checked::before { border-radius: 50%; width: 40rpx; height: 40rpx; line-height: 40rpx; text-align: center; font-size: 30rpx; color: #fff; background: transparent; transform: translate(-50%, -50%) scale(1); -webkit-transform: translate(-50%, -50%) scale(1); }
.stock-no{ position: relative; font-size: 24rpx; }
.stock-no>text{ position: absolute; bottom: 60rpx; right: 30rpx; color: #e9472c; }
.txtRed30{ font-size:36rpx;}
.clBot{padding:20rpx 0 0 30rpx; color: #999}
