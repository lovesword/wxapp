page{ background: #f2f2f2; }
.balance { padding: 30rpx; border-bottom: 1rpx solid #eee; }
.balance view:nth-child(1) { font-size: 40rpx; }
.balance view:nth-child(2) { margin-top: 10rpx; color: #999; }
.balance view:nth-child(3) { margin-top: 10rpx; font-size: 24rpx; color: #999; }
.amountEntered, .payList { display: flex; align-items: center; }
.amountEntered, .payList input{ width: 500rpx; }
.withdrawalItem image { width: 40rpx; height: 40rpx; margin-right: 30rpx; }
.amountEntered { height: 100rpx; padding-left: 30rpx; }
.amountEntered view:nth-child(1) { margin-right: 30rpx; color: #f87d6d; font-size: 40rpx; }
.bgGray2 { height: 80rpx; line-height: 80rpx; padding-left: 30rpx; border-top: 1rpx solid #f2f2f2; border-bottom: 1rpx solid #f2f2f2; }
.wStyletit { height: 80rpx; line-height: 80rpx; padding-left: 30rpx; font-size: 32rpx; }
.withdrawalItem { display: flex; flex-wrap: wrap; padding: 10rpx 0 0 15rpx; }
.withdrawalItem > view { height: 80rpx; display: flex; align-items: center; padding: 0 35rpx; border: 1rpx solid #eee; margin: 0 0 20rpx 30rpx; }
.withdrawalItem > view.active { border: 1rpx solid #f87d6d; }
.payList { height: 100rpx; border-top: 1rpx solid #f2f2f2; }
.payList > view { width: 120rpx; text-align: right; margin-right: 30rpx; }
.wdBtn { width: 90%; height: 100rpx; background: #ff4544; color: #fff; text-align: center; font-size: 32rpx; line-height: 100rpx; margin: 30rpx auto; border-radius: 10rpx }
.height0 { height: 0; }
.wrap { margin: 30rpx; padding-bottom: 50rpx; background: #fff; border-radius: 15rpx; }
.list{ display: flex; justify-content: space-between; padding-right:30rpx; }
.list>text:last-child{ color: #f87d6d; }
