<view class="van-stepper custom-class">
    <view bind:tap="onMinus" class="minus-class van-stepper__minus {{disabled||value<=min?'van-stepper__minus--disabled':''}}"></view>
    <input bind:blur="onBlur" bindinput="onInput" class="input-class van-stepper__input {{disabled||disableInput?'van-stepper__input--disabled':''}}" disabled="{{disabled||disableInput}}" type="{{integer?'number':'digit'}}" value="{{value}}"></input>
    <view bind:tap="onPlus" class="plus-class van-stepper__plus {{disabled||value>=max?'van-stepper__plus--disabled':''}}"></view>
</view>
